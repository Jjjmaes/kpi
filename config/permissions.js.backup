// 角色优先级（用于默认角色选择）
const ROLE_PRIORITY = {
  'admin': 100,
  'finance': 90,
  'pm': 80,
  'admin_staff': 75,
  'sales': 70,
  'part_time_sales': 65,
  'reviewer': 50,
  'translator': 40,
  'layout': 30
};

